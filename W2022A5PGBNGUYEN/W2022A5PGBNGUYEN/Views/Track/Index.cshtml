@model IEnumerable<W2022A5PGBNGUYEN.Models.TrackBaseViewModels>

@{ ViewBag.Title = "Track List";
    var userAccount = new W2022A5PGBNGUYEN.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal); }

<h2>@ViewBag.Title</h2>
<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Composers)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>

    <td class="text-nowrap">
        @Html.ActionLink("Details", "Details", new { id = item.TrackId })
        @if (userAccount.HasRoleClaim("Clerk"))
        {
            
             @Html.Raw("\n|\n");
             @Html.ActionLink("Delete", "Delete", new { id = item.TrackId })
        }
    </td>
</tr>
}

</table>