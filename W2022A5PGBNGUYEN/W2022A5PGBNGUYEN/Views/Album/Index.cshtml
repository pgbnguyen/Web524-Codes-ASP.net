@model IEnumerable<W2022A5PGBNGUYEN.Models.AlbumBaseViewModels>


@{
    ViewBag.Title = "Album list";
}

<h2>Index</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coordinator)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReleaseDate)
    </td>
    <td>
        <img src="@Html.DisplayFor(modelItem => item.UrlAlbum)" alt="@item.Name" width="100" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Coordinator)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.AlbumId })
    </td>
</tr>
    }

</table>
