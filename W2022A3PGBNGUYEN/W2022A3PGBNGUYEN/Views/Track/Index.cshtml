@model IEnumerable<W2022A3PGBNGUYEN.Models.TrackWithDetailViewModel>

@{
    ViewBag.Title = "List of tracks";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Milliseconds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumArtistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MediaType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Composer)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Milliseconds)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UnitPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AlbumTitle)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.AlbumArtistName)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.MediaType.Name)
    </td>

    <td>

        @Html.ActionLink("Details", "Details", new { id = item.TrackId }) 

    </td>
</tr>
}

</table>
